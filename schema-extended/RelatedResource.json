{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Related Resource",
  "description": "Author-provided identifier (URI or DOI) for a related resource.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "identifier": {
      "oneOf": [{
          "type": "string",
          "format": "uri"
        },
        {
          "$ref": "Common.json#/definitions/doi"
        }
      ]
    },
    "display_text": {
      "title": "Display text",
      "description": "Descriptive text associated with the resource.",
      "type": "string",
      "minLength": 1
    },
    "resource_type": {
      "title": "Resource type",
      "description": "The type of resource associated with the identifier.",
      "type": "string",
      "enum": [
        "related article",
        "slides",
        "notes",
        "software",
        "dataset",
        "simulation",
        "video",
        "review",
        "news item",
        "personal website",
        "blog entry",
        "other"
      ]
    }
  },
  "required": [
    "identifier",
    "display_text",
    "resource_type"
  ]
}
