{
    "$schema": "http://json-schema.org/draft-07/schema#",

    "definitions": {
      "abstract": {
        "type": "object",
        "properties": {
          "abstract": {
            "type": "string",
            "minLength": 1,
            "$comment": "there are some rare cases (quant-ph/0202054v5, hep-th/0407186v1, astro-ph/0005231v2) with empty abstracts that will need to be fixed."
          },
          "language": {
            "$ref": "#/definitions/language"
          }
        },
        "required": [
          "abstract",
          "language"
        ]
      },
      "affiliation": {
        "description": "Institutional affiliation",
        "type": "object",
        "properties": {
          "name": {
            "description": "The complete name of the affiliation.",
            "type": "string",
            "minLength": 1
          },
          "ror_id": {
            "title": "ROR ID",
            "description": "Research Organization Registry ID.",
            "type": "string",
            "pattern": "^https://ror\\.org/0\\w{6}\\d{2}$",
            "examples": [
              "https://ror.org/05bnh6r87",
              "https://ror.org/05gzmn429",
              "https://ror.org/01ggx4157",
              "https://ror.org/03c3r2d17"
            ]
          }
        },
        "required": [
          "name"
        ],
        "additionalProperties": false
      },
      "content_type": {
        "title": "Content type",
        "$comment": "TODO: enumeration needs further review, and will need to decide whether the items require their own definitions with more structure.",
        "type": "string",
        "enum": ["article", "autobiography", "biography", "book", "book chapter", "book review", "conference proceeding", "conference proceeding index", "erratum", "memorial", "thesis", "lecture notes", "whitepaper"]
      },
      "collaboration": {
        "type": "object",
        "properties": {
          "name": {
            "description": "The fullest representation of the collaborations's name",
            "type": "string",
            "minLength": 1
          }
        }
      },
      "comment": {
        "title": "Comment",
        "type": "string",
        "minLength": 1
      },
      "doi": {
        "title": "DOI",
        "description": "Digital Object Identifier.",
        "type": "string",
        "pattern": "^10\\.\\d{4,9}/\\S+$",
        "minLength": 1
      },
      "funding": {
        "type": "object",
        "properties": {
          "funding_statement": {
            "title": "Funding statement",
            "type": "string",
            "minLength": 1
          },
          "funder_doi": {
            "description": "DOI from the Funder Registry",
            "$ref": "#/definitions/doi"
          },
          "project_name": {
            "title": "Project name",
            "description": "The full name of the project.",
            "type": "string",
            "minLength": 1
          },
          "project_acronym": {
            "title": "Project acronym",
            "description": "The abbreviated name of the project.",
            "type": "string",
            "minLength": 1
          },
          "grant_number": {
            "title": "Grant number",
            "type": "string",
            "minLength": 1
          }
        },
        "additionalProperties": false
      },
      "language": {
        "description": "The 2-letter ISO 639-1 language classification.",
        "type": "string",
        "$comment": "TODO: need complete list of language codes",
        "enum": ["en", "de", "fr", "ru", "cn"]
      },
      "active_licenses": {
        "title": "Active licenses",
        "description": "Licenses that are selectable upon submission to arXiv.",
        "type": "string",
        "enum": [
          "http://creativecommons.org/licenses/by/4.0/",
          "http://creativecommons.org/licenses/by-sa/4.0/",
          "http://creativecommons.org/licenses/by-nc-sa/4.0/",
          "http://creativecommons.org/licenses/by-nc-nd/4.0/",
          "http://arxiv.org/licenses/nonexclusive-distrib/1.0/",
          "http://creativecommons.org/publicdomain/zero/1.0/"
        ]

      },
      "inactive_licenses": {
        "title": "Inactive licenses",
        "description": "Historical licenses that are no longer selectable upon submission to arXiv.",
        "type": "string",
        "enum": [
          "http://arxiv.org/licenses/assumed-1991-2003/",
          "http://creativecommons.org/licenses/by/3.0/",
          "http://creativecommons.org/licenses/by-nc-sa/3.0/",
          "http://creativecommons.org/licenses/publicdomain"
        ]
      },
      "person": {
        "type": "object",
        "properties": {
          "full_name": {
            "description": "The fullest representation of the person's name available in arXiv metadata.",
            "type": "string"
          },
          "last_name": {
            "description": "The family or surname part of the person's name, if available.",
            "oneOf": [
              {"type": "string"},
              {"type": "null"}
            ]
          },
          "first_name": {
            "description": "The personal or forename part of the person's name, if available.",
            "oneOf": [
              {"type": "string"},
              {"type": "null"}
            ]
          },
          "suffix": {
            "description": "The suffix part of the person's name, if available.",
            "oneOf": [
              {"type": "string"},
              {"type": "null"}
            ]
          },
          "affiliations": {
            "description": "Institutional affiliations",
            "type": "array",
            "items": {
              "$ref": "#/definitions/affiliation"
            },
            "minItems": 1
          },
          "orcid": {
            "title": "ORCID iD",
            "allOf": [
              {
                "type": "string",
                "pattern": "^\\d{4}-\\d{4}-\\d{4}-\\d{3}[0-9X]$"
              },
              {
                "type": "string",
                "$comment": "TODO: consider adding 'orcid' format here; however, some validators hang on unexpected formats. Validator would need to implement the checksum validation as described in https://support.orcid.org/hc/en-us/articles/360006897674-Structure-of-the-ORCID-Identifier"
              }
            ]
          },
          "author_id": {
            "description": "arXiv author identifier, if available.",
            "oneOf": [
              {
                "type": "string",
                "pattern": "^[a-z]+_[a-z]{1}_[0-9]+$"
              },
              {"type": "null"}
            ]
          },
          "is_submitter": {
            "description": "Indicates whether this person is the submitter of this submission",
            "type": "boolean"
          }
        },
        "required": [
          "full_name",
          "first_name",
          "last_name"
        ]
      },
      "publication_status": {
        "$comment": "this structure needs further discussion",
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "enum": ["posted", "withdrawn"]
          },
          "is_accepted_version": {
            "type": "boolean"
          }
        }
      },
      "reference": {
        "type": "object",
        "properties": {
          "reference_string": {
            "type": "string"
          }
        }
      },
      "source_format": {
        "oneOf": [
          {
            "type": "string",
            "enum": ["tex", "pdftex", "pdf", "ps", "html", "docx", "withdrawn"]
          },
          {"type": "null"}
        ]
      },
      "source_info": {
        "description": "The source input format.",
        "type": "object",
        "properties": {
          "source_format": {
            "$ref": "#/definitions/source_format"
          },
          "size_kilobytes": {
            "description": "The size of the source file, in kilobytes.",
            "type": "number"
          }
        },
        "required": [
          "source_format",
          "size_kilobytes"
        ],
        "additionalProperties": false
      },
      "title": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "minLength": 1
          },
          "language": {
            "$ref": "#/definitions/language"
          }
        },
        "required": [
          "title",
          "language"
        ]
      },
      "author_link": {
        "tile": "Author link",
        "description": "Author-provided link to related resource.",
        "type": "object",
        "properties": {
          "uri": {
            "type": "string",
            "format": "uri"
          },
          "display_text": {
            "description": "Descriptive text to associate with the URI.",
            "type": "string",
            "minLength": 1
          },
          "category": {
            "title": "Link category",
            "description": "The type of resource the link resolves to.",
            "type": "string",
            "$comment": "TODO: refine this enumeration",
            "enum": ["related article", "slides", "notes", "software", "dataset", "simulation", "video", "review", "news item", "personal website", "blog entry", "other"]
          }
        },
        "required": [
          "uri",
          "category"
        ]
      },
      "versioned_identifier": {
        "type": "string",
        "pattern": "^(([0-9]{4}\\.[0-9]{4,5})|([a-z\\-]+\\/[0-9]{2}[01][0-9]{4}))v[0-9]+$"
      }
    },

    "title": "arXiv Document Metadata",
    "description": "Extended metadata record for an arXiv e-print.",
    "type": "object",
    "additionalProperties": false,
    "required": [
      "identifier",
      "submitted_date",
      "publication_date",
      "license",
      "content_types",
      "primary_classification",
      "titles",
      "abstracts",
      "legacy_authors",
      "authors",
      "publication_status",
      "source_info",
      "submitter"
    ],
    "properties": {
      "identifier": {
        "title": "arXiv identifier",
        "description": "Canonical arXiv e-print identifier",
        "$ref": "#/definitions/versioned_identifier"
      },
      "content_types": {
        "title": "List of content types",
        "type": "array",
        "items": {
          "$ref": "#/definitions/content_type"
        },
        "minItems": 1,
        "uniqueItems": true
      },
      "is_withdrawn": {
        "type": "boolean"
      },
      "submitter": {
        "title": "Submitter",
        "description": "Information about the submitter.",
        "$ref": "#/definitions/person"
      },
      "submitted_date": {
        "description": "Date this e-print version was submitted.",
        "type": "string",
        "format": "date-time"
      },
      "publication_date": {
        "description": "Date this e-print version was announced.",
        "type": "string",
        "format": "date-time"
      },
      "license": {
        "title": "License",
        "description": "The license associated with the content.",
        "oneOf": [
          {"$ref": "#/definitions/active_licenses"},
          {"$ref": "#/definitions/inactive_licenses"}
        ]
      },
      "previous_versions": {
        "$comment": "This follows the legacy metadata model for previous versions",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "identifier": {
              "description": "Canonical arXiv e-print identifier",
              "$ref": "#/definitions/versioned_identifier"
            },
            "submitted_date": {
              "description": "Date this previous version of the e-print was submitted.",
              "type": "string",
              "format": "date-time"
            },
            "publication_date": {
              "description": "Date this previous e-print version was announced.",
              "type": "string",
              "format": "date-time"
            },
            "source_format": {
              "$ref": "#/definitions/source_format"
            },
            "size_kilobytes": {
              "type": "number"
            }
          }
        }
      },
      "primary_classification": {
        "title": "Primary classification",
        "type": "string",
        "minLength": 1
      },
      "secondary_classifications": {
        "title": "Secondary classifications",
        "type": "array",
        "items": {
          "type": "string"
        },
        "minItems": 1,
        "uniqueItems": true
      },

      "proxy": {
        "oneOf": [
          {"type": "string"},
          {"type": "null"}
        ]
      },
      "titles": {
        "description": "The English and non-English versions of the title.",
        "type": "array",
        "items": {
          "$ref": "#/definitions/title"
        },
        "minItems": 1,
        "uniqueItems": true
      },
      "abstracts": {
        "description": "The English and non-English versions of the abstract.",
        "type": "array",
        "items": {
          "$ref": "#/definitions/abstract"
        },
        "minItems": 1,
        "uniqueItems": true
      },
      "legacy_authors": {
        "title": "Legacy authors",
        "description": "Legacy author free-text field.",
        "type": "string",
        "minLength": 1,
        "examples": [
          "J. Doe (Cornell University), M. Smith (Stanford University), F. Bar"
        ]
      },
      "authors": {
        "title": "Authors",
        "type": "array",
        "items": {
          "$ref": "#/definitions/person"
        },
        "minItems": 1
      },
      "collaborations": {
        "title": "Collaborations",
        "description": "Collaborations associated with this e-print. Should not include 'Collaboration' suffix.",
        "type": "array",
        "items": {
          "$ref": "#/definitions/collaboration"
        },
        "examples": [
          "ATLAS",
          "BABAR",
          "L3",
          "ZEUS"
        ],
        "minItems": 1,
        "uniqueItems": true
      },
      "comments": {
        "title": "Comments",
        "description": "Comments from authors or arXiv administrators.",
        "type": "object",
        "properties": {
          "author_comments": {
            "Title": "Author comments",
            "description": "Comments from authors.",
            "type": "array",
            "items": {
              "$ref": "#/definitions/comment"
            },
            "minItems": 1,
            "uniqueItems": true
          },
          "administrator_comments": {
            "title": "Administrator comments",
            "description": "Comments from by arXiv administrators",
            "type": "array",
            "items": {
              "$ref": "#/definitions/comment"
            },
            "minItems": 1,
            "uniqueItems": true
          },
          "legacy_comments": {
            "description": "Unstructured comments from authors and/or arXiv administrators.",
            "$ref": "#/definitions/comment"
          }
        }
      },
      "journal_ref": {
        "title": "Journal reference",
        "type": "string",
        "minLength": 1
      },
      "journal_dois": {
        "description": "The journal DOI(s).",
        "type": "array",
        "$comment": "Do we want additional properties to indicate the type or provenance of the DOI?",
        "items": {
          "$ref": "#/definitions/doi"
        }
      },
      "arxiv_doi": {
        "title": "arXiv DOI",
        "description": "The arXiv-issued DOI.",
        "$ref": "#/definitions/doi"
      },
      "report_num": {
        "title": "Report number",
        "type": "string",
        "minLength": 1
      },
      "msc_classes": {
        "description": "Classifications from American Mathematical Society Mathematical Subject Classification (MSC)",
        "oneOf": [
          {"type": "string"},
          {"type": "null"}
        ]
      },
      "acm_classes": {
        "description": "Classifications from ACM Computing Classification System",
        "$comment": "we could have am enumeration here",
        "oneOf": [
          {"type": "string"},
          {"type": "null"}
        ]
      },
      "author_links": {
        "type": "array",
        "items": {
          "$ref": "#/definitions/author_link"
        },
        "minItems": 1,
        "uniqueItems": true
      },
      "publication_status": {
        "$ref": "#/definitions/publication_status"
      },
      "source_info": {
        "title": "Source information",
        "description": "Information about the input source files.",
        "$ref": "#/definitions/source_info"
      }
    }
}
