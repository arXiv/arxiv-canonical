{
    "$schema": "http://json-schema.org/draft-07/schema#",

    "$defs": {
      "abstract": {
        "type": "object",
        "properties": {
          "abstract": {
            "type": "string"
          },
          "language": {
            "$ref": "#/definitions/language"
          }
        },
        "required": [
          "abstract",
          "language"
        ]
      },
      "affiliation": {
        "description": "Institutional affiliation",
        "type": "object",
        "properties": {
          "name": {
            "description": "The complete name of the affiliation",
            "type": "string"
          },
          "ror_id": {
            "description": "Affiliation's Research Organization Registry ID",
            "oneOf": [
              {"type": "string"},
              {"type": "null"}
            ]
          }
        }
      },
      "content_type": {
        "$comment": "TODO: below are examples; a more complete enumeration of possible content types is needed.",
        "type": "string",
        "enum": ["article", "proceeding", "review", "monograph", "Ph. D. thesis", "seminar", "lecture notes", "whitepaper"]
      },
      "collaboration": {
        "type": "object",
        "properties": {
          "name": {
            "description": "The fullest representation of the collaborations's name",
            "type": "string"
          },
          "language": {
            "description": "Language of the collaboration name.",
            "oneOf": [
              {"$ref": "#/definitions/language"},
              {"type": "null"}
            ]
          }
        }
      },
      "doi": {
        "type": "string",
        "pattern": "^10.[0-9]{4,9}/[-._;()/:a-zA-Z0-9]+$"
      },
      "funding": {
        "type": "object",
        "properties": {
          "funder_name": {
            "type": "string"
          },
          "funder_doi": {
            "description": "DOI from the Funder Registry",
            "oneOf": [
              {"$ref": "#/definitions/doi"},
              {"type": "null"}
            ]
          }
        }
      },
      "language": {
        "description": "The 2-letter ISO 639-1 language classification.",
        "type": "string",
        "$comment": "TODO: need complete list of language codes",
        "enum": ["en", "de", "fr", "ru", "cn"]
      },
      "license": {
        "type": "object",
        "properties": {
          "@type": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "nullable": true
          }
        }
      },
      "person": {
        "type": "object",
        "properties": {
          "@type": {
            "type": "string"
          },
          "full_name": {
            "description": "The fullest representation of the person's name available in arXiv metadata.",
            "type": "string"
          },
          "last_name": {
            "description": "The family or surname part of the person's name, if available.",
            "oneOf": [
              {"type": "string"},
              {"type": "null"}
            ]
          },
          "first_name": {
            "description": "The personal or forename part of the person's name, if available.",
            "oneOf": [
              {"type": "string"},
              {"type": "null"}
            ]
          },
          "suffix": {
            "description": "The suffix part of the person's name, if available.",
            "oneOf": [
              {"type": "string"},
              {"type": "null"}
            ]
          },
          "affiliation": {
            "description": "Institutional affiliation, if available.",
            "$ref": "#/definitions/affiliation"
          },
          "orcid": {
            "description": "ORCID identifier, if available.",
            "oneOf": [
              {"type": "string"},
              {"type": "null"}
            ]
          },
          "author_id": {
            "description": "arXiv author identifier, if available.",
            "oneOf": [
              {
                "type": "string",
                "pattern": "^[a-z]+_[a-z]{1}_[0-9]+$"
              },
              {"type": "null"}
            ]
          },
          "is_submitter": {
            "description": "Indicates whether this person is the submitter of this submission",
            "type": "boolean"
          }
        },
        "required": [
          "full_name",
          "first_name",
          "last_name"
        ]
      },
      "publication_status": {
        "$comment": "this structure needs further discussion",
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "enum": ["posted", "withdrawn"]
          },
          "is_accepted_version": {
            "type": "boolean"
          }
        }
      },
      "reference": {
        "type": "object",
        "properties": {
          "reference_string": {
            "type": "string"
          }
        }
      },
      "source_format": {
        "oneOf": [
          {
            "type": "string",
            "enum": ["tex", "pdftex", "pdf", "ps", "html", "docx", "withdrawn"]
          },
          {"type": "null"}
        ]
      },
      "title": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "language": {
            "$ref": "#/definitions/language"
          }
        },
        "required": [
          "title",
          "language"
        ]
      },
      "user_link": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string",
            "$comment": "TODO: consider using a pattern here"
          },
          "display_text": {
            "description": "Text to associate with the URL.",
            "type": "string"
          },
          "category": {
            "type": "string",
            "$comment": "TODO: refine this enumeration",
            "enum": ["related article", "slides", "notes", "software", "dataset", "simulation", "video", "review", "news item", "personal website", "blog entry", "other"]
          }
        }
      },
      "versioned_identifier": {
        "type": "string",
        "pattern": "^(([0-9]{4}\\.[0-9]{4,5})|([a-z\\-]+\\/[0-9]{2}[01][0-9]{4}))v[0-9]+$"
      }
    },

    "title": "Abs",
    "description": "Extended metadata record for an arXiv e-print.",
    "type": "object",
    "additionalProperties": false,
    "required": [
      "identifier",
      "submitted_date",
      "publication_date",
      "license",
      "content_type",
      "primary_classification",
      "titles",
      "abstracts",
      "authors_display",
      "authors",
      "publication_status",
      "size_kilobytes",
      "source_format",
      "submitter"
    ],
    "properties": {
      "@type": {
        "type": "string"
      },
      "identifier": {
        "description": "Canonical arXiv e-print identifier",
        "$ref": "#/definitions/versioned_identifier"
      },
      "content_type": {
        "$ref": "#/definitions/content_type"
      },
      "is_withdrawn": {
        "type": "boolean"
      },
      "submitter": {
        "description": "The person who submitted the e-print.",
        "oneOf": [
          {"$ref": "#/definitions/person"},
          {"type": "null"}
        ]
      },
      "submitted_date": {
        "description": "Date this e-print version was submitted.",
        "type": "string",
        "format": "date-time"
      },
      "publication_date": {
        "description": "Date this e-print version was announced.",
        "type": "string",
        "format": "date-time"
      },
      "license": {
        "$ref": "#/definitions/license"
      },
      "previous_versions": {
        "$comment": "This follows the legacy metadata model for previous versions",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "identifier": {
              "description": "Canonical arXiv e-print identifier",
              "$ref": "#/definitions/versioned_identifier"
            },
            "submitted_date": {
              "description": "Date this previous version of the e-print was submitted.",
              "type": "string",
              "format": "date-time"
            },
            "publication_date": {
              "description": "Date this previous e-print version was announced.",
              "type": "string",
              "format": "date-time"
            },
            "source_format": {
              "$ref": "#/definitions/source_format"
            },
            "size_kilobytes": {
              "type": "number"
            }
          }
        }
      },
      "primary_classification": {
        "type": "string"
      },
      "secondary_classification": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "source_format": {
        "type": "string"
      },
      "size_kilobytes": {
        "type": "number"
      },
      "proxy": {
        "oneOf": [
          {"type": "string"},
          {"type": "null"}
        ]
      },
      "titles": {
        "description": "The English and non-English versions of the title.",
        "type": "array",
        "minItems": 1,
        "items": {
          "$ref": "#/definitions/title"
        }
      },
      "abstracts": {
        "description": "The English and non-English versions of the abstract.",
        "type": "array",
        "minItems": 1,
        "items": {
          "$ref": "#/definitions/abstract"
        }
      },
      "authors_display": {
        "descripiton": "Legacy author display string.",
        "type": "string"
      },
      "authors": {
        "type": "array",
        "minItems": 1,
        "items": {
          "$ref": "#/definitions/person"
        }
      },
      "collaborations": {
        "description": "Collaborations associated with this e-print",
        "type": "array",
        "items": {
          "$ref": "#/definitions/collaboration"
        }
      },
      "comments": {
        "oneOf": [
          {"type": "string"},
          {"type": "null"}
        ]
      },
      "journal_ref": {
        "description": "Journal reference",
        "oneOf": [
          {"type": "string"},
          {"type": "null"}
        ]
      },
      "journal_dois": {
        "description": "The journal DOI(s).",
        "type": "array",
        "$comment": "Do we want additional properties to indicate the type or provenance of the DOI?",
        "items": {
          "$ref": "#/definitions/doi"
        }
      },
      "arxiv_doi": {
        "description": "The arXiv-issued DOI.",
        "oneOf": [
          {"$ref": "#/definitions/doi"},
          {"type": "null"}
        ]
      },
      "report_num": {
        "oneOf": [
          {"type": "string"},
          {"type": "null"}
        ]
      },
      "msc_class": {
        "description": "Classifications from American Mathematical Society Mathematical Subject Classification (MSC)",
        "oneOf": [
          {"type": "string"},
          {"type": "null"}
        ]
      },
      "acm_class": {
        "description": "Classifications from ACM Computing Classification System",
        "$comment": "we could have am enumeration here",
        "oneOf": [
          {"type": "string"},
          {"type": "null"}
        ]
      },
      "user_links": {
        "type": "array",
        "items": {
          "$ref": "#/definitions/user_link"
        }
      },
      "publication_status": {
        "$ref": "#/definitions/publication_status"
      },
      "size_kilobytes": {
        "type": "number"
      },
      "source_format": {
        "$ref": "#/definitions/source_format"
      }
    }
}
